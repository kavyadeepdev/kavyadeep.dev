---
import MainLayout from "../../layouts/MainLayout.astro"

const posts = await Astro.glob("./*.md");
---

<MainLayout title="Blog | Kavyadeep Dev" description="about me page">
	<h2 class="text-4xl font-bold mb-8">Blog</h2>
	{
		posts.map(post => (
			<a href={post.url}>
				<div class="post mb-2">
					<h2 class="text-cyan-500 text-xl font-bold">
						<span class="underline">{post.frontmatter.title}</span>
					</h2>
					<h3 class="text-zinc-400 italic">{post.frontmatter.date}</h3>
				</div>
			</a>
		))
	}

</MainLayout>

